@model SammysAuto.Models.AccountViewModels.RegisterViewModel
@using SammysAuto.Utility
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" style="width: 100%;max-width: 566px;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="FirstName" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="FirstName" class="form-control" /></div>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="LastName" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="LastName" class="form-control" /></div>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="Email" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="Email" class="form-control" /></div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="PhoneNumber" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="PhoneNumber" class="form-control" /></div>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="Address" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="Address" class="form-control" /></div>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="City" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="City" class="form-control" /></div>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="PostalCode" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="PostalCode" class="form-control" /></div>
                </div>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="Password" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="Password" class="form-control" /></div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="ConfirmPassword" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="ConfirmPassword" class="form-control" /></div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.AdminEndUser))
            {
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"><label asp-for="isAdmin" class="custom-label"></label></div>
                    <div class="col-sm-8"><input asp-for="isAdmin" type="checkbox" /></div>
                </div>
            </div>
            }
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-8">
                        @{
                            var btnAction = User.IsInRole(SD.AdminEndUser) ? "Add Customer" : "Register";
                            <button type="submit" class="btn btn-primary">@btnAction</button>
                        }
                    </div>
                </div>
            </div>
        </form>
</div>

@section Scripts { 
    <partial name="_ValidationScriptsPartial" />
}
